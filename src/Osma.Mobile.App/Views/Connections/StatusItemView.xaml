<?xml version="1.0" encoding="UTF-8"?>
<ContentView  BackgroundColor="Transparent" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Osma.Mobile.App.Views.Connections.StatusItemView">
    <ContentView.Content>
        <Frame OutlineColor="Gray" Margin="6" Padding="12" HasShadow="false" BackgroundColor="Transparent">
            <StackLayout>
                <Label Text="{Binding Title}" FontSize="Medium"/>
                <Label Text="{Binding Subtitle}" FontSize="Small" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>