<?xml version="1.0" encoding="UTF-8"?>
<ContentView BackgroundColor="Transparent" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Osma.Mobile.App.Views.Connections.ActionItemView">
    <ContentView.Content>
        <StackLayout Padding="16"
                     Orientation="Horizontal"
                     VerticalOptions="CenterAndExpand">
            <StackLayout>
                <Label Text="{Binding Title}" FontSize="Small"/>
                <Label Text="{Binding Subtitle}" FontSize="Micro" />
            </StackLayout>
            <Button
                Text="{Binding PrimaryActionTitle}"
                Command="{Binding PrimaryActionCommand}"
                HorizontalOptions="EndAndExpand"
                Style="{StaticResource ButtonStylePrimary}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView> 